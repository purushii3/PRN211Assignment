            <ComboBox x:Name="cboKoi" 
                     Width="90"
                     Margin="5"/>
            <TextBox x:Name="txtQuantity"
                     Width="80"
                     Margin="5"/>
            <TextBox x:Name="txtPrice"
                     Width="80"
                     Margin="5"/>
            <StackPanel Orientation="Vertical" Margin="1" VerticalAlignment="Center">
                <RadioButton x:Name="rbStatusOn" Content="Active" GroupName="StatusGroup"  IsChecked="{Binding IsActive, Mode=TwoWay}"/>
                <RadioButton x:Name="rbStatusOff" Content="Inactive" GroupName="StatusGroup" IsChecked="{Binding IsActive, Mode=TwoWay}"/>
            </StackPanel>
        </StackPanel>

