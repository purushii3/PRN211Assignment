            <Button Content="Delete Order"
                    Width="155"
                    Margin="5"
                    Click="btnDeleteOrder"
                    >
                <Button.Background>
                    <SolidColorBrush Color="#FFA2AA3D" />
                </Button.Background>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
