<UserControl x:Class="WpfApp.Shop.CheckOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Shop"
             mc:Ignorable="d" 
             Loaded="OrderDetailManagement_OnLoaded"
             d:DesignHeight="450" d:DesignWidth="800">
   <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <!-- User DataGrid -->
    <DataGrid x:Name="dgData"
        Grid.Row="0"
        AutoGenerateColumns="False"
        Margin="0 10 0 0"
        IsReadOnly="False"
        SelectionChanged="DgData_OnSelectionChanged"
        CanUserAddRows="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Koi Fish Name" Binding="{Binding KoiFish.KoiFishName}" Width="450" />
            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="200"/>
            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
        </DataGrid.Columns>
    </DataGrid>

    <!-- Form for adding or editing users -->
    <StackPanel Grid.Row="1" Orientation="Horizontal"
            Height="38"
            VerticalAlignment="Top">
        <TextBox x:Name="txtKoiName"
                 Width="200"
                 Margin="5"/>

        <TextBox x:Name="txtQuantity" Width="124" Height="29" Margin="5"/>
        <TextBox x:Name="txtPrice"
                 Width="80"
                 Margin="5"/>
        <TextBox x:Name="txtTotalPrice"
         Width="100"
         Margin="230,5,5,5"/>
        </StackPanel>

    <StackPanel Grid.Row="2"
        Orientation="Horizontal">
        <Button Content="Checkout"
            Width="155"
            Margin="5"
            Padding="5"
            Click="btnCheckout">
            <Button.Background>
                <SolidColorBrush Color="#0099FF" />
            </Button.Background>
            <Button.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
            To="#28AEED" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
            To="#0099FF" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button Content="Delete Order"
                Width="155"
                Margin="5"
                Click="btnDeleteOrder"
        >
            <Button.Background>
                <SolidColorBrush Color="#FFA2AA3D" />
            </Button.Background>
            <Button.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#28AEED" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#0099FF" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

    </StackPanel>
   </Grid>
</UserControl>